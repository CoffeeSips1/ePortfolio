@using SNHU_Capstone_Project.Models.Entities
@model User

@{
    Layout = null;
}


<div class="text-danger" asp-validation-summary="All"></div>
<div class="form-group row g-2 align-items-center">
    <div class="col-4">
        <label class="col-form-label" asp-for="Username">Username<a style="color: red;">*</a></label>
    </div>
    <div class="col-auto">
        <input class="form-control" type="text" asp-for="Username" />
    </div>
</div>

<div class="form-group row g-2 align-items-center">
    <div class="col-4">
        <label class="col-form-label" asp-for="Email">Email</label>
    </div>
    <div class="col-auto">
        <input class="form-control" type="text" asp-for="Email" />
    </div>
</div>

<div class="form-group row g-2 align-items-center">
    <div class="col-4">
        <label class="col-form-label" asp-for="Password">Password<a style="color: red;">*</a></label>
    </div>
    <div class="col-auto">
        <input class="form-control" type="password" asp-for="Password" onkeyup="validatePassword('AddUserButton')" />
    </div>
</div>

<div class="form-group row g-2 align-items-center">
    <div class="col-4">
        <label class="col-form-label" for="ConfirmPassword">Verify Pass<a style="color: red;">*</a></label>
    </div>
    <div class="col-auto">
        <input class="form-control" type="password" id="ConfirmPassword" onkeyup="validatePassword('AddUserButton')" />
    </div>
</div>

<div class="form-group">
    <ul id="passwordValidationList" hidden>
        <li id="minLength"></li>
        <li id="maxLength"></li>
        <li id="uppercase"></li>
        <li id="symbol"></li>
        <li id="pwdMatch"></li>
    </ul>
</div>
<input type="hidden" asp-for="Id" />